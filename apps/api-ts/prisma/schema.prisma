generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("NEON_DATABASE_URL")
}

model User {
  id             Int       @id @default(autoincrement())
  username       String?   @unique @db.VarChar(100)
  email          String?   @unique @db.VarChar(255)
  hashedPassword String?   @map("hashed_password") @db.VarChar(255)
  walletAddress  String?   @unique @map("wallet_address") @db.VarChar(42)
  nonce          String?   @db.VarChar(255)
  zkProofHash    String?   @map("zk_proof_hash")
  isActive       Boolean   @default(true) @map("is_active")
  isAdmin        Boolean   @default(false) @map("is_admin")
  tenantId       String?   @map("tenant_id") @db.VarChar(100)
  lastLogin      DateTime? @map("last_login") @db.Timestamptz(6)
  createdAt      DateTime  @default(now()) @map("created_at") @db.Timestamptz(6)

  defiPortfolios  DeFiPortfolio[]
  zkCredentials   ZkCredential[]
  marketBets      MarketBet[]
  nftLicenses     NftLicense[]
  loyaltyAirdrops LoyaltyAirdrop[]

  @@map("users")
}

model Customer {
  id             Int       @id @default(autoincrement())
  customerId     String    @map("customer_id") @unique @db.VarChar(50)
  gender         String?   @db.VarChar(20)
  age            Int?
  annualIncome   Decimal   @map("annual_income") @db.Decimal(12, 2)
  spendingScore  Int?      @map("spending_score")
  profession     String?   @db.VarChar(100)
  workExperience Int?      @map("work_experience")
  familySize     Int?      @map("family_size")
  walletAddress  String?   @map("wallet_address") @db.VarChar(42)
  createdAt      DateTime  @default(now()) @map("created_at") @db.Timestamptz(6)
  updatedAt      DateTime  @default(now()) @map("updated_at") @db.Timestamptz(6)
  deletedAt      DateTime? @map("deleted_at") @db.Timestamptz(6)

  @@map("customers")
}

model Prediction {
  id                Int      @id @default(autoincrement())
  customerId        String   @map("customer_id") @db.VarChar(50)
  predictedSpending Decimal  @map("predicted_spending") @db.Decimal(10, 2)
  modelVersion      String?  @map("model_version") @db.VarChar(50)
  featuresSnapshot  String?  @map("features_snapshot")
  createdAt         DateTime @default(now()) @map("created_at") @db.Timestamptz(6)

  @@map("predictions")
}

model Segment {
  id           Int      @id @default(autoincrement())
  customerId   String   @map("customer_id") @db.VarChar(50)
  cluster      Int
  modelVersion String?  @map("model_version") @db.VarChar(50)
  createdAt    DateTime @default(now()) @map("created_at") @db.Timestamptz(6)

  @@map("segments")
}

model ApiUsage {
  id         Int      @id @default(autoincrement())
  tenantId   String   @map("tenant_id") @db.VarChar(100)
  monthKey   String   @map("month_key") @db.VarChar(7)
  callCount  Int      @default(0) @map("call_count")
  lastCalled DateTime @default(now()) @map("last_called_at") @db.Timestamptz(6)

  @@unique([tenantId, monthKey])
  @@map("api_usage")
}

model Subscription {
  id                   Int       @id @default(autoincrement())
  tenantId             String    @map("tenant_id") @db.VarChar(100)
  plan                 String    @db.VarChar(50)
  stripeSubscriptionId String?   @map("stripe_subscription_id") @db.VarChar(255)
  limits               String?
  startsAt             DateTime? @map("starts_at") @db.Timestamptz(6)
  endsAt               DateTime? @map("ends_at") @db.Timestamptz(6)
  createdAt            DateTime  @default(now()) @map("created_at") @db.Timestamptz(6)

  @@map("subscriptions")
}

model AuditLog {
  id         Int      @id @default(autoincrement())
  tableName  String   @map("table_name") @db.VarChar(100)
  recordId   String?  @map("record_id") @db.VarChar(100)
  action     String?  @db.VarChar(20)
  oldValues  String?  @map("old_values")
  newValues  String?  @map("new_values")
  userId     String?  @map("user_id") @db.VarChar(100)
  createdAt  DateTime @default(now()) @map("created_at") @db.Timestamptz(6)

  @@map("audit_log")
}

model FeatureFlagRecord {
  id        Int      @id @default(autoincrement())
  name      String   @unique @db.VarChar(100)
  enabled   Boolean  @default(false)
  updatedAt DateTime @default(now()) @updatedAt @map("updated_at") @db.Timestamptz(6)

  @@map("feature_flags")
}

model DeFiPortfolio {
  id             Int      @id @default(autoincrement())
  userId         Int      @map("user_id")
  walletAddress  String   @map("wallet_address") @db.VarChar(42)
  totalValueUsd  Decimal  @map("total_value_usd") @db.Decimal(12, 2)
  riskScore      Float    @map("risk_score")
  lastUpdated    DateTime @default(now()) @map("last_updated") @db.Timestamptz(6)

  user           User     @relation(fields: [userId], references: [id])

  @@map("defi_portfolios")
}

model MarketVolatility {
  id        Int      @id @default(autoincrement())
  indexName String   @map("index_name") @db.VarChar(50)
  value     Float
  timestamp DateTime @default(now()) @db.Timestamptz(6)

  @@map("market_volatility")
}

model ZkCredential {
  id             Int      @id @default(autoincrement())
  userId         Int      @map("user_id")
  credentialType String   @map("credential_type") @db.VarChar(50)
  proofHash      String   @map("proof_hash") @db.VarChar(255)
  verifiedAt     DateTime @default(now()) @map("verified_at") @db.Timestamptz(6)

  user           User     @relation(fields: [userId], references: [id])

  @@map("zk_credentials")
}

model PredictionMarket {
  id              Int      @id @default(autoincrement())
  question        String   @db.VarChar(255)
  status          String   @default("OPEN") @db.VarChar(50) // OPEN, RESOLVED_YES, RESOLVED_NO
  totalYesPool    Float    @default(0) @map("total_yes_pool")
  totalNoPool     Float    @default(0) @map("total_no_pool")
  endTime         DateTime @map("end_time") @db.Timestamptz(6)
  createdAt       DateTime @default(now()) @map("created_at") @db.Timestamptz(6)

  bets            MarketBet[]

  @@map("prediction_markets")
}

model MarketBet {
  id          Int      @id @default(autoincrement())
  marketId    Int      @map("market_id")
  userId      Int      @map("user_id")
  prediction  String   @db.VarChar(10) // YES, NO
  amount      Float
  placedAt    DateTime @default(now()) @map("placed_at") @db.Timestamptz(6)

  market      PredictionMarket @relation(fields: [marketId], references: [id])
  user        User             @relation(fields: [userId], references: [id])

  @@map("market_bets")
}

model NftLicense {
  id          Int      @id @default(autoincrement())
  userId      Int      @map("user_id") @unique
  tier        String   @db.VarChar(50) // BASIC, PRO, ENTERPRISE
  tokenId     String   @map("token_id") @db.VarChar(255)
  mintedAt    DateTime @default(now()) @map("minted_at") @db.Timestamptz(6)
  expiresAt   DateTime? @map("expires_at") @db.Timestamptz(6)

  user        User     @relation(fields: [userId], references: [id])

  @@map("nft_licenses")
}

model LoyaltyAirdrop {
  id            Int      @id @default(autoincrement())
  userId        Int      @map("user_id")
  campaignName  String   @map("campaign_name") @db.VarChar(255)
  tokenId       String   @map("token_id") @db.VarChar(255)
  claimedAt     DateTime @default(now()) @map("claimed_at") @db.Timestamptz(6)

  user        User     @relation(fields: [userId], references: [id])

  @@map("loyalty_airdrops")
}
