# CohortLens - Environment Variables
# Copy to .env and configure

DATA_RAW_PATH=data/raw
DATA_PROCESSED_PATH=data/processed
DATA_SOURCE=csv
# DATA_SOURCE=neon  # Use Neon DB instead of CSV

# Neon DB (required when DATA_SOURCE=neon)
# NEON_DATABASE_URL=postgresql://user:pass@host/dbname?sslmode=require

API_HOST=127.0.0.1
API_PORT=8000
API_WORKERS=1
LOG_LEVEL=INFO

# Auth (OAuth2/JWT)
JWT_SECRET=your-secret-key-change-in-production
JWT_EXPIRE_MINUTES=60
DEFAULT_AUTH_USER=admin
DEFAULT_USER_PASSWORD=admin
